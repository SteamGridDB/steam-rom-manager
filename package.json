{
  "name": "steam-rom-manager",
  "version": "2.2.19",
  "license": "GPL-3.0",
  "description": "An app for managing ROMs in Steam",
  "author": {
    "name": "FrogTheFrog",
    "url": "https://github.com/FrogTheFrog",
    "email": "warliukz@gmail.com"
  },
  "build": {
    "appId": "FrogTheFrog.SteamROMManager",
    "productName": "Steam ROM Manager",
    "compression": "normal",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "./src/assets/icons/win.ico"
    },
    "portable": {
      "artifactName": "${productName}-portable-${version}.${ext}"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "./src/assets/icons"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ],
      "icon": "./src/assets/icons/mac.icns"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "!node_modules/leveldown/{build,deps}/**"
    ]
  },
  "main": "./dist/main.bundle.js",
  "repository": {
    "url": "https://github.com/FrogTheFrog/steam-rom-manager"
  },
  "scripts": {
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps",
    "validate-files": "ts-node ./.validate-files.ts",
    "start": "./node_modules/.bin/electron ./dist/main.bundle.js",
    "watch:main": "webpack --watch --config ./webpack/main.js",
    "watch:renderer": "webpack --watch --config ./webpack/renderer.js",
    "build:main": "cross-env NODE_ENV=production webpack --config ./webpack/main.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./webpack/renderer.js",
    "build:dist": "rimraf dist && npm run build:main && npm run build:renderer",
    "build:win": "electron-builder --win --ia32 --x64",
    "build:linux": "electron-builder --linux --ia32 --x64",
    "build:docker": "electron-builder --linux --win --ia32 --x64",
    "build:mac": "electron-builder --mac --ia32 --x64"
  },
  "dependencies": {
    "@angular/animations": "^5.2.9",
    "@angular/common": "^5.2.9",
    "@angular/compiler": "^5.2.9",
    "@angular/core": "^5.2.9",
    "@angular/forms": "^5.2.9",
    "@angular/http": "^5.2.9",
    "@angular/platform-browser": "^5.2.9",
    "@angular/platform-browser-dynamic": "^5.2.9",
    "@angular/router": "^5.2.9",
    "@node-steam/vdf": "^2.0.1",
    "@types/rangy": "0.0.32",
    "ajv": "^6.4.0",
    "async": "^2.6.0",
    "blob-to-buffer": "^1.2.7",
    "bluebird": "^3.5.1",
    "colornames": "^1.1.1",
    "crc": "^3.5.0",
    "electron-window-state": "^4.1.1",
    "fast-memoize": "^2.3.2",
    "fs-extra": "^5.0.0",
    "fuzzaldrin-plus": "^0.6.0",
    "glob": "^7.1.2",
    "he": "^1.1.1",
    "highlight.js": "^9.12.0",
    "is-color": "^0.2.0",
    "loader-utils": "^1.1.0",
    "lodash": "^4.17.5",
    "long": "^4.0.0",
    "markdown-it": "^8.4.1",
    "markdown-it-anchor": "^4.0.0",
    "markdown-it-attrs": "^0.8.0",
    "mime-types": "^2.1.18",
    "minimatch": "^3.0.4",
    "ngx-color-picker": "^5.3.3",
    "os-name": "^2.0.1",
    "rangy": "^1.3.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.8",
    "steam-categories": "^1.1.1",
    "steam-shortcut-editor": "^3.1.1",
    "to-css": "^1.2.1",
    "unknown-ts": "^0.1.0",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@types/async": "^2.0.48",
    "@types/bluebird": "^3.5.20",
    "@types/crc": "^3.4.0",
    "@types/fs-extra": "^5.0.1",
    "@types/glob": "^5.0.35",
    "@types/he": "^0.5.29",
    "@types/highlight.js": "^9.12.2",
    "@types/lodash": "^4.14.106",
    "@types/long": "^3.0.32",
    "@types/markdown-it": "0.0.4",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^9.6.0",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^4.0.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "debug-loader": "0.0.1",
    "electron": "^7.1.2",
    "electron-builder": "^21.2.0",
    "electron-rebuild": "^1.8.8",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.1.0",
    "nested-require-loader": "^0.2.1",
    "node-loader": "^0.6.0",
    "node-sass": "^4.13.0",
    "null-loader": "^0.1.1",
    "postcss": "^6.0.21",
    "postcss-loader": "^2.1.3",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.7",
    "to-string-loader": "^1.1.5",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2",
    "webpack": "^3.11.0",
    "webpack-merge": "^4.1.2",
    "worker-loader": "^1.1.1"
  }
}
