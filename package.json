    "@types/he": "^1.2.3",
    "@types/highlight.js": "^9.12.4",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.14.202",
    "@types/long": "^4.0.2",
    "@types/markdown-it": "12.2.3",
