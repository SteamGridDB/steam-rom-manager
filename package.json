    "@types/rangy": "0.0.38",
    "@types/wicg-file-system-access": "^2020.9.8",
    "@types/winreg": "^1.2.36",
    "angular2-template-loader": "^0.6.2",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.4",
    "electron": "^24.1.3",
    "electron-builder": "^23.6.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.4",
    "mini-css-extract-plugin": "^2.7.7",
    "node-abi": "^3.40.0",
    "npm-check-updates": "^16.14.20",
    "postcss": "^8.4.38",
    "postcss-loader": "^7.3.4",
    "rimraf": "^5.0.5",
    "sass": "^1.62.1",
    "sass-loader": "^13.2.2",
    "to-string-loader": "^1.2.0",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "upath": "^2.0.1",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2",
    "webpack-merge": "^5.8.0"
  }
}
