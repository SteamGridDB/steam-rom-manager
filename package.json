{
  "name": "steam-rom-manager",
  "version": "2.4.29",
  "license": "GPL-3.0",
  "description": "An app for managing ROMs in Steam",
  "author": {
    "name": "FrogTheFrog",
    "url": "https://github.com/FrogTheFrog",
    "email": "warliukz@gmail.com"
  },
  "build": {
    "appId": "FrogTheFrog.SteamROMManager",
    "productName": "Steam ROM Manager",
    "compression": "normal",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "msi",
        "nsis",
        "portable"
      ],
      "icon": "./src/assets/icons/win.ico"
    },
    "portable": {
      "artifactName": "${productName}-portable-${version}.${ext}"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "./src/assets/icons"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "./src/assets/icons/mac.icns"
    },
    "files": [
      "dist/**/*",
      "workers/*",
      "package.json",
      "!node_modules/leveldown/{build,deps}/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "doZennn"
    }
  },
  "main": "./dist/main.bundle.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/SteamGridDB/steam-rom-manager"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "validate-files": "ts-node ./scripts/validate-files.ts",
    "update-files": "ts-node ./scripts/update-files.ts",
    "version-files": "node ./scripts/version-files.js",
    "start": "electron ./dist/main.bundle.js",
    "watch:main": "webpack --watch --config ./webpack/main.js",
    "watch:renderer": "webpack --watch --config ./webpack/renderer.js",
    "update:deps": "npm-check-updates --interactive --format group",
    "prepare:build": "cross-env tsc -P ./webpack",
    "build:main": "cross-env NODE_ENV=production webpack --config ./webpack/main.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./webpack/renderer.js",
    "prebuild:dist": "npm run prepare:build",
    "build:dist": "rimraf dist && npm run build:main && npm run build:renderer",
    "build:win": "electron-builder --win --ia32 --x64",
    "build:linux": "electron-builder --linux --x64",
    "build:mac": "electron-builder --mac --x64",
    "build:linuxdir": "electron-builder --linux --x64 --dir && echo '24.1.3' > release/linux-unpacked/version && cp LICENSE release/linux-unpacked/",
    "build:flatpak": "electron-installer-flatpak --src release/linux-unpacked --dest release/ --arch x64 --config flatconf.json"
  },
  "dependencies": {
    "@angular/animations": "^15.2.10",
    "@angular/common": "^15.2.10",
    "@angular/compiler": "^15.2.10",
    "@angular/core": "^15.2.10",
    "@angular/forms": "^15.2.10",
    "@angular/platform-browser": "^15.2.10",
    "@angular/platform-browser-dynamic": "^15.2.10",
    "@angular/router": "^15.2.10",
    "@electron/remote": "^2.0.12",
    "@node-steam/vdf": "^2.2.0",
    "ajv": "^8.12.0",
    "async": "^3.2.5",
    "bcp-47": "^2.1.0",
    "better-sqlite3": "^8.3.0",
    "binary-vdf-2": "^0.1.0",
    "blizzard-product-parser": "https://github.com/cbartondock/blizzard-product-parser.git",
    "cli-color": "^2.0.4",
    "colornames": "^1.1.1",
    "copy-webpack-plugin": "^11.0.0",
    "crc": "^4.3.2",
    "electron-log": "^4.4.8",
    "electron-updater": "^5.3.0",
    "electron-window-state": "^5.0.3",
    "fast-memoize": "^2.5.2",
    "fast-xml-parser": "^4.3.6",
    "file-saver": "^2.0.5",
    "file-uri-to-path": "^2.0.0",
    "fs-extra": "~11.1.1",
    "fuzzaldrin-plus": "^0.6.0",
    "glob": "^9.3.5",
    "he": "^1.2.0",
    "highlight.js": "^11.8.0",
    "is-color": "^1.0.2",
    "js-yaml": "^4.1.0",
    "loader-utils": "^3.2.1",
    "lodash": "^4.17.21",
    "long": "^5.2.3",
    "markdown-it": "^13.0.2",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-attrs": "^4.1.6",
    "markdown-it-toc-done-right": "^4.2.0",
    "mime-types": "^2.1.35",
    "minimatch": "^8.0.4",
    "ngx-color-picker": "^14.0.0",
    "node-fetch": "^3.3.2",
    "os-name": "^5.1.0",
    "probe-image-size": "^7.2.3",
    "rangy": "^1.3.1",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "steam-categories": "^1.1.4",
    "steam-shortcut-editor": "^3.1.3",
    "steamgriddb": "2.1.1",
    "to-css": "^1.2.1",
    "windows-shortcuts-ps": "https://github.com/cbartondock/windows-shortcuts-ps.git",
    "winreg": "^1.2.5",
    "xdg-parse": "^1.1.0",
    "yaml": "^2.2.2",
    "yargs": "^17.7.2",
    "zone.js": "^0.13.3"
  },
  "devDependencies": {
    "@types/async": "^3.2.24",
    "@types/cli-color": "^2.0.6",
    "@types/crc": "^3.8.3",
