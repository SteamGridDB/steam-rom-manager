{
  "name": "steam-rom-manager",
  "version": "2.3.52",
  "license": "GPL-3.0",
  "description": "An app for managing ROMs in Steam",
  "author": {
    "name": "FrogTheFrog",
    "url": "https://github.com/FrogTheFrog",
    "email": "warliukz@gmail.com"
  },
  "build": {
    "appId": "FrogTheFrog.SteamROMManager",
    "productName": "Steam ROM Manager",
    "compression": "normal",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "./src/assets/icons/win.ico"
    },
    "portable": {
      "artifactName": "${productName}-portable-${version}.${ext}"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "./src/assets/icons"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "./src/assets/icons/mac.icns"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "!node_modules/leveldown/{build,deps}/**",
      "node_modules/better-sqlite3/{build,deps}/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "doZennn"
    }
  },
  "main": "./dist/main.bundle.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/SteamGridDB/steam-rom-manager"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "validate-files": "ts-node ./scripts/validate-files.ts",
    "update-files": "ts-node ./scripts/update-files.ts",
    "version-files": "node ./scripts/version-files.js",
    "start": "electron ./dist/main.bundle.js",
    "watch:main": "webpack --watch --config ./webpack/main.js",
    "watch:renderer": "webpack --watch --config ./webpack/renderer.js",
    "prepare:build": "cross-env tsc -P ./webpack",
    "build:main": "cross-env NODE_ENV=production webpack --config ./webpack/main.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./webpack/renderer.js",
    "prebuild:dist": "npm run prepare:build",
    "build:dist": "rimraf dist && npm run build:main && npm run build:renderer",
    "build:win": "electron-builder --win --ia32 --x64",
    "build:linux": "electron-builder --linux --ia32 --x64",
    "build:mac": "electron-builder --mac --x64",
    "build:linuxdir": "electron-builder --linux --x64 --dir && cp electron-version release/linux-unpacked/version && cp LICENSE release/linux-unpacked/",
    "build:flatpak": "electron-installer-flatpak --src release/linux-unpacked --dest release/ --arch x64 --config flatconf.json",
    "build:docker": "electron-builder --linux --win --ia32 --x64 --publish onTagOrDraft"
  },
  "dependencies": {
    "@angular/animations": "^5.2.9",
    "@angular/common": "^5.2.9",
    "@angular/compiler": "^5.2.9",
    "@angular/core": "^5.2.9",
    "@angular/forms": "^5.2.9",
    "@angular/http": "^5.2.9",
    "@angular/platform-browser": "^5.2.9",
    "@angular/platform-browser-dynamic": "^5.2.9",
    "@angular/router": "^5.2.9",
    "@electron/remote": "github:electron/remote",
    "@node-steam/vdf": "^2.0.1",
    "ajv": "^6.4.0",
    "appid": "^1.0.3",
    "async": "^2.6.4",
    "bcp-47": "^2.1.0",
    "better-sqlite3": "github:cbartondock/better-sqlite3",
    "binary-vdf": "https://github.com/cbartondock/node-binary-vdf",
    "blob-to-buffer": "^1.2.7",
    "colornames": "^1.1.1",
    "crc": "^3.5.0",
    "electron-log": "^4.2.1",
    "electron-updater": "^4.3.1",
    "electron-window-state": "^4.1.1",
    "fast-memoize": "^2.3.2",
    "fast-xml-parser": "^4.1.3",
    "file-saver": "^2.0.2",
    "file-uri-to-path": "^2.0.0",
    "fs-extra": "~5.0.0",
    "fuzzaldrin-plus": "^0.6.0",
    "glob": "^7.1.2",
    "he": "^1.1.1",
    "highlight.js": "^10.4.1",
    "is-color": "^0.2.0",
    "js-yaml": "^4.1.0",
    "loader-utils": "^1.1.0",
    "lodash": "^4.17.19",
    "long": "^4.0.0",
    "markdown-it": "^12.3.2",
    "markdown-it-anchor": "^4.0.0",
    "markdown-it-attrs": "^0.8.0",
    "mime-types": "^2.1.18",
    "minimatch": "^3.0.5",
    "ngx-color-picker": "^5.3.3",
    "os-name": "^4.0.1",
    "probe-image-size": "^5.0.0",
    "rangy": "^1.3.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.8",
    "steam-categories": "https://github.com/cbartondock/steam-categories.git",
    "steam-shortcut-editor": "^3.1.1",
    "steamgriddb": "1.5.0",
    "to-css": "^1.2.1",
    "windows-shortcuts-ps": "https://github.com/cbartondock/windows-shortcuts-ps.git",
    "winreg": "^1.2.4",
    "xdg-parse": "^1.1.0",
    "yaml": "^1.10.2",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@types/async": "^2.0.48",
    "@types/crc": "^3.4.0",
    "@types/fs-extra": "~5.0.0",
    "@types/glob": "^5.0.35",
    "@types/he": "^0.5.29",
    "@types/highlight.js": "^9.12.2",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.106",
    "@types/long": "^3.0.32",
    "@types/markdown-it": "0.0.4",
    "@types/mini-css-extract-plugin": "^2.4.0",
    "@types/minimatch": "^3.0.3",
    "@types/node": "12.12.46",
    "@types/rangy": "0.0.32",
    "@types/wicg-file-system-access": "^2020.9.5",
    "@types/winreg": "^1.2.31",
    "@types/yargs": "^17.0.10",
    "angular2-template-loader": "^0.6.2",
    "autoprefixer": "^10.4.0",
    "cross-env": "^5.1.4",
    "css-loader": "^6.5.0",
    "electron": "^13.6.6",
    "electron-builder": "^23.0.2",
    "electron-rebuild": "^3.2.5",
    "html-loader": "^3.0.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.4.3",
    "postcss": "^8.3.11",
    "postcss-loader": "^6.2.0",
    "rimraf": "^2.6.2",
    "sass": "^1.43.4",
    "sass-loader": "^12.3.0",
    "to-string-loader": "^1.2.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "upath": "^1.0.5",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0"
  }
}
